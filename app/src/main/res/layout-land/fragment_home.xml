<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/change_wallpaper_button"
            android:layout_width="@dimen/activate_button_size"
            android:layout_height="@dimen/activate_button_size"
            android:layout_margin="48dp"
            android:background="@drawable/circle"
            android:fontFamily="@font/montserrat"
            android:text="@string/change_wallpaper"
            android:textAllCaps="false"
            android:textColor="#333"
            android:textSize="18sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/wallpaper_settings_button"
            android:layout_width="@dimen/activate_button_size"
            android:layout_height="@dimen/activate_button_size"
            android:layout_margin="48dp"
            android:background="@drawable/circle"
            android:fontFamily="@font/montserrat"
            android:text="@string/wallpaper_settings"
            android:textAllCaps="false"
            android:textColor="#333"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>